{
    "manifest_version": 2,

    "name": "Notare",
    "description":
        "An extension for an enhanced Youtube notetaking experience.",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "NotareCircleTransparent.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/injected.js"],
            "run_at": "document_idle"
        }
    ],

    "icons": {
        "16": "NotareCircleTransparent.png",
        "48": "NotareCircleTransparent.png",
        "128": "NotareCircleTransparent.png"
    },

    "permissions": [
        "tabs", "storage", "*://*.youtube.com/*"
    ],

    "web_accessible_resources": [
        "NotareCircleTransparent.png",
        "NotareWord.png",
        "*.png",
        "js/injected.js"
    ]
}
